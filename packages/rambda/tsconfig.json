{
  "compilerOptions":{
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx":"react",
    "module":"commonjs",
    "noImplicitAny":false,
    "outDir":"dists",
    "sourceMap":false,
    "strictNullChecks": false,
    "target":"es6",
    "lib":[
      "dom",
      "es6",
      "es7",
      "esnext",
      "es2017"
    ]
  },
  "include":[
    "./src/**/*"
  ],
  "exclude":[
    "dists",
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
