{
  "compilerOptions": {
    "allowJs": true,
    "jsx":"react",
    "allowSyntheticDefaultImports": true,
    "module":"commonjs",
    "noImplicitAny":false,
    "outDir":"./dist/",
    "sourceMap":true,
    "strictNullChecks": false,
    "target":"es2018",
    "lib":[
      "dom",
      "es6",
      "es7",
      "esnext",
      "es2017"
    ],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}