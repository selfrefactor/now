{
  "compilerOptions":{
    "allowJs": true,
    "jsx":"react",
    "allowSyntheticDefaultImports": true,
    "module":"commonjs",
    "noImplicitAny":false,
    "outDir":"./dist/",
    "sourceMap":true,
    "strictNullChecks": false,
    "target":"es2018",
    "lib":[
      "dom",
      "es6",
      "es7",
      "esnext",
      "es2017"
    ],
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include":[
    "./src/**/*"
  ],
  "exclude":[
    "dist",
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
